{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,   // ✅ Permet d'importer voicePrompts.json
    "allowSyntheticDefaultImports": true // ✅ option utile avec les JSON + import default
  },
  "compileOnSave": true,
  "include": ["src"]
}
