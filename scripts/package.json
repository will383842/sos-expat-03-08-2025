{
  "name": "sos-expat-scripts",
  "version": "1.0.0",
  "description": "Scripts Firebase pour SOS Expat Platform",
  "main": "firebase-seed.js",
  "scripts": {
    "seed": "node firebase-seed.js seed",
    "seed:dev": "cross-env NODE_ENV=development node firebase-seed.js seed",
    "seed:prod": "cross-env NODE_ENV=production node firebase-seed.js seed",
    "clean": "node firebase-seed.js clean",
    "clean:force": "node firebase-seed.js clean --force",
    "check-integrity": "node data-integrity-check.js",
    "fix-integrity": "node data-integrity-check.js --auto-fix",
    "backup": "node firebase-backup.js",
    "restore": "node firebase-backup.js --restore",
    "migrate": "node firebase-migrations.js",
    "test": "jest --testMatch='**/*.test.js'",
    "test:watch": "jest --watch",
    "lint": "eslint *.js --fix",
    "format": "prettier --write *.js",
    "validate": "npm run lint && npm run test",
    "deploy:functions": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "shell": "firebase functions:shell",
    "serve": "firebase emulators:start",
    "emulator": "firebase emulators:start --only firestore,auth,functions",
    "dev": "npm run emulator"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.4.1",
    "dotenv": "^16.3.1",
    "chalk": "^4.1.2",
    "inquirer": "^9.2.8",
    "ora": "^5.4.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-node": "^4.1.0",
    "prettier": "^3.0.0",
    "jest": "^29.6.1",
    "firebase-functions-test": "^3.1.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "firebase", 
    "seed", 
    "admin", 
    "sos-expat",
    "backend",
    "scripts",
    "firestore",
    "functions"
  ],
  "author": "SOS Expat Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sos-expat/platform.git"
  },
  "bugs": {
    "url": "https://github.com/sos-expat/platform/issues"
  },
  "homepage": "https://github.com/sos-expat/platform#readme"
}