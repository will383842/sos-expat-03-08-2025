/* =================================================================
   CSS PROFESSIONNEL - VERSION CORRIGÉE SANS CONFLITS CARTE
   Optimisé pour un rendu professionnel sans conflits Leaflet
   ================================================================= */

/* =================================================================
   VARIABLES CSS - DESIGN SYSTEM COHÉRENT
   ================================================================= */

:root {
  /* Couleurs principales */
  --primary: #2563eb;
  --primary-hover: #1d4ed8;
  --primary-light: rgba(37, 99, 235, 0.1);
  --primary-focus: rgba(37, 99, 235, 0.2);
  
  /* Couleurs système */
  --bg-primary: #ffffff;
  --bg-secondary: #f8fafc;
  --bg-tertiary: #f1f5f9;
  --surface: #ffffff;
  --surface-hover: #f8fafc;
  
  --text-primary: #0f172a;
  --text-secondary: #475569;
  --text-tertiary: #64748b;
  --text-placeholder: #94a3b8;
  --text-inverse: #ffffff;
  
  --border-light: #e2e8f0;
  --border-medium: #cbd5e1;
  --border-focus: var(--primary);
  
  /* États */
  --error: #dc2626;
  --error-light: rgba(220, 38, 38, 0.1);
  --success: #059669;
  --success-light: rgba(5, 150, 105, 0.1);
  --warning: #d97706;
  --info: #0284c7;
  
  /* Espacements fluides */
  --space-xs: 0.5rem;
  --space-sm: 0.75rem;
  --space-md: 1rem;
  --space-lg: 1.5rem;
  --space-xl: 2rem;
  --space-2xl: 3rem;
  
  /* Typographie */
  --font-xs: 0.75rem;
  --font-sm: 0.875rem;
  --font-base: 1rem;
  --font-lg: 1.125rem;
  --font-xl: 1.25rem;
  --font-2xl: 1.5rem;
  --font-3xl: 2rem;
  
  --line-height-tight: 1.25;
  --line-height-base: 1.5;
  --line-height-relaxed: 1.75;
  
  /* Police système */
  --font-sans: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif;
  
  /* Rayons */
  --radius-sm: 0.375rem;
  --radius: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  --radius-2xl: 1.5rem;
  --radius-full: 9999px;
  
  /* Ombres */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
  
  /* Timing */
  --duration-fast: 150ms;
  --duration-base: 200ms;
  --duration-slow: 300ms;
  --ease: cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Z-index */
  --z-dropdown: 1000;
  --z-sticky: 1020;
  --z-modal: 1050;
  --z-tooltip: 1070;
  
  /* Zones tactiles */
  --touch-min: 44px;
  --touch-ideal: 48px;
  --touch-comfort: 56px;
}

/* Mode sombre */
@media (prefers-color-scheme: dark) {
  :root {
    --bg-primary: #0f172a;
    --bg-secondary: #1e293b;
    --bg-tertiary: #334155;
    --surface: #1e293b;
    --surface-hover: #334155;
    
    --text-primary: #f8fafc;
    --text-secondary: #cbd5e1;
    --text-tertiary: #94a3b8;
    --text-placeholder: #64748b;
    
    --border-light: #334155;
    --border-medium: #475569;
  }
}

/* =================================================================
   RESET MODERNE & BASES
   ================================================================= */

*,
*::before,
*::after {
  box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
}

* {
  margin: 0;
  padding: 0;
  font: inherit;
}

html {
  -webkit-text-size-adjust: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  scroll-behavior: smooth;
}

body {
  font-family: var(--font-sans);
  font-size: var(--font-base);
  line-height: var(--line-height-base);
  color: var(--text-primary);
  background-color: var(--bg-primary);
  min-height: 100vh;
  touch-action: manipulation;
  -webkit-overflow-scrolling: touch;
  overscroll-behavior: none;
  overflow-x: hidden;
}

/* Sélection de texte */
::selection {
  background-color: var(--primary-light);
  color: var(--text-primary);
}

/* =================================================================
   TYPOGRAPHIE PROFESSIONNELLE
   ================================================================= */

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  line-height: var(--line-height-tight);
  color: var(--text-primary);
  margin-bottom: var(--space-md);
}

h1 { font-size: var(--font-3xl); }
h2 { font-size: var(--font-2xl); }
h3 { font-size: var(--font-xl); }
h4 { font-size: var(--font-lg); }
h5, h6 { font-size: var(--font-base); }

p {
  line-height: var(--line-height-base);
  margin-bottom: var(--space-md);
}

a {
  color: var(--primary);
  text-decoration: underline;
  text-decoration-thickness: 1px;
  text-underline-offset: 2px;
  transition: all var(--duration-fast) var(--ease);
}

a:hover, a:focus {
  text-decoration-thickness: 2px;
  color: var(--primary-hover);
}

/* =================================================================
   FORMULAIRES PROFESSIONNELS
   ================================================================= */

.form {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
  max-width: 500px;
  margin: 0 auto;
  padding: var(--space-lg);
}

.field {
  position: relative;
  width: 100%;
}

.label {
  display: block;
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: var(--space-xs);
  line-height: var(--line-height-tight);
}

.input,
.select,
.textarea {
  width: 100%;
  min-height: var(--touch-ideal);
  padding: 14px 16px;
  font-size: max(16px, var(--font-base)); /* Évite zoom iOS */
  color: var(--text-primary);
  background-color: var(--bg-primary);
  border: 2px solid var(--border-light);
  border-radius: var(--radius);
  transition: all var(--duration-fast) var(--ease);
  outline: none;
  appearance: none;
}

.input::placeholder,
.textarea::placeholder {
  color: var(--text-placeholder);
  opacity: 1;
}

.input:focus,
.select:focus,
.textarea:focus {
  border-color: var(--border-focus);
  box-shadow: 0 0 0 3px var(--primary-focus);
  transform: translateY(-1px);
}

/* États d'erreur */
.input--error,
.select--error,
.textarea--error {
  border-color: var(--error);
  background-color: var(--error-light);
}

.input--error:focus,
.select--error:focus,
.textarea--error:focus {
  box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.15);
}

/* Select spécifique */
.select {
  background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 24 24' fill='none' stroke='%23475569' stroke-width='2'><polyline points='6 9 12 15 18 9'></polyline></svg>");
  background-repeat: no-repeat;
  background-position: right 12px center;
  background-size: 16px;
  padding-right: 44px;
  cursor: pointer;
}

/* Textarea */
.textarea {
  min-height: 120px;
  resize: vertical;
  font-family: inherit;
}

/* Messages d'aide */
.field-message {
  font-size: var(--font-xs);
  margin-top: var(--space-xs);
  line-height: var(--line-height-tight);
}

.field-message--error {
  color: var(--error);
}

.field-message--success {
  color: var(--success);
}

/* =================================================================
   BOUTONS PROFESSIONNELS - OPTIMISÉS SANS CONFLIT CARTE
   ================================================================= */

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-xs);
  min-height: var(--touch-ideal);
  padding: 0 var(--space-lg);
  font-size: var(--font-base);
  font-weight: 600;
  line-height: 1;
  text-decoration: none;
  border: none;
  border-radius: var(--radius);
  cursor: pointer;
  transition: all var(--duration-fast) var(--ease);
  touch-action: manipulation;
  user-select: none;
}

.btn--primary {
  background-color: var(--primary);
  color: white;
}

.btn--primary:hover {
  background-color: var(--primary-hover);
  transform: translateY(-1px);
}

.btn--primary:active {
  transform: scale(0.98);
}

.btn--secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
  border: 2px solid var(--border-light);
}

.btn--secondary:hover {
  background-color: var(--surface-hover);
  border-color: var(--border-medium);
}

.btn--ghost {
  background-color: transparent;
  color: var(--primary);
}

.btn--ghost:hover {
  background-color: var(--primary-light);
}

/* Tailles */
.btn--sm {
  min-height: 40px;
  padding: 0 var(--space-md);
  font-size: var(--font-sm);
}

.btn--lg {
  min-height: var(--touch-comfort);
  padding: 0 var(--space-xl);
  font-size: var(--font-lg);
}

/* États */
.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none !important;
}

.btn--full {
  width: 100%;
}

/* =================================================================
   CARTES & CONTENEURS - OPTIMISÉS SANS CONFLIT CARTE
   ================================================================= */

.card {
  background-color: var(--surface);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-light);
  transition: all var(--duration-fast) var(--ease);
}

.card:hover {
  box-shadow: var(--shadow);
  transform: translateY(-1px);
}

.card--interactive {
  cursor: pointer;
}

.card--interactive:active {
  transform: scale(0.99);
}

.container {
  width: 100%;
  max-width: 1280px;
  padding-inline: var(--space-md);
  margin-inline: auto;
}

@media (min-width: 640px) {
  .container {
    padding-inline: var(--space-lg);
  }
}

@media (min-width: 1024px) {
  .container {
    padding-inline: var(--space-xl);
  }
}

/* =================================================================
   NAVIGATION
   ================================================================= */

.nav {
  position: sticky;
  top: 0;
  background-color: var(--surface);
  border-bottom: 1px solid var(--border-light);
  z-index: var(--z-sticky);
  padding: var(--space-sm) 0;
  backdrop-filter: blur(10px) saturate(180%);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: var(--touch-comfort);
}

.nav-logo {
  font-size: var(--font-lg);
  font-weight: 700;
  color: var(--text-primary);
  text-decoration: none;
}

.nav-menu {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.nav-link {
  padding: var(--space-xs) var(--space-sm);
  color: var(--text-secondary);
  text-decoration: none;
  border-radius: var(--radius);
  transition: all var(--duration-fast) var(--ease);
  min-height: var(--touch-ideal);
  display: flex;
  align-items: center;
}

.nav-link:hover,
.nav-link--active {
  color: var(--primary);
  background-color: var(--primary-light);
  text-decoration: none;
}

/* =================================================================
   COMPOSANTS UI
   ================================================================= */

/* Spinner */
.spinner {
  width: 24px;
  height: 24px;
  border: 2px solid var(--border-light);
  border-top-color: var(--primary);
  border-radius: var(--radius-full);
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Skeleton loading */
.skeleton {
  background: linear-gradient(
    90deg,
    var(--bg-secondary) 25%,
    var(--bg-tertiary) 50%,
    var(--bg-secondary) 75%
  );
  background-size: 200% 100%;
  animation: shimmer 1.5s ease-in-out infinite;
  border-radius: var(--radius);
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* Avatar */
.avatar {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  background-color: var(--bg-tertiary);
  color: var(--text-secondary);
  font-weight: 600;
  overflow: hidden;
}

.avatar--sm { width: 32px; height: 32px; font-size: var(--font-xs); }
.avatar--md { width: 40px; height: 40px; font-size: var(--font-sm); }
.avatar--lg { width: 56px; height: 56px; font-size: var(--font-base); }

.avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Badge */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 2px 8px;
  font-size: var(--font-xs);
  font-weight: 600;
  line-height: 1;
  border-radius: var(--radius-full);
  min-height: 20px;
}

.badge--primary { background-color: var(--primary); color: white; }
.badge--success { background-color: var(--success); color: white; }
.badge--error { background-color: var(--error); color: white; }
.badge--warning { background-color: var(--warning); color: white; }

/* Toast */
.toast {
  position: fixed;
  bottom: var(--space-lg);
  left: 50%;
  transform: translateX(-50%);
  background-color: var(--surface);
  color: var(--text-primary);
  padding: var(--space-md) var(--space-lg);
  border-radius: var(--radius-full);
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--border-light);
  z-index: var(--z-tooltip);
  max-width: calc(100vw - var(--space-xl));
  font-size: var(--font-sm);
}

.toast--success {
  background-color: var(--success);
  color: white;
  border-color: var(--success);
}

.toast--error {
  background-color: var(--error);
  color: white;
  border-color: var(--error);
}

/* =================================================================
   UTILITAIRES ESSENTIELS
   ================================================================= */

/* Layout */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }

/* Spacing */
.gap-xs { gap: var(--space-xs); }
.gap-sm { gap: var(--space-sm); }
.gap-md { gap: var(--space-md); }
.gap-lg { gap: var(--space-lg); }

.p-sm { padding: var(--space-sm); }
.p-md { padding: var(--space-md); }
.p-lg { padding: var(--space-lg); }

.m-auto { margin: auto; }
.mb-md { margin-bottom: var(--space-md); }
.mb-lg { margin-bottom: var(--space-lg); }

/* Typography */
.text-xs { font-size: var(--font-xs); }
.text-sm { font-size: var(--font-sm); }
.text-base { font-size: var(--font-base); }
.text-lg { font-size: var(--font-lg); }
.text-xl { font-size: var(--font-xl); }

.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }

.text-center { text-align: center; }
.text-primary { color: var(--text-primary); }
.text-secondary { color: var(--text-secondary); }
.text-error { color: var(--error); }

/* =================================================================
   RESPONSIVE DESIGN
   ================================================================= */

@media (min-width: 640px) {
  .sm\:flex { display: flex; }
  .sm\:hidden { display: none; }
  .sm\:text-lg { font-size: var(--font-lg); }
}

@media (min-width: 768px) {
  .md\:flex { display: flex; }
  .md\:hidden { display: none; }
  .md\:text-xl { font-size: var(--font-xl); }
}

@media (min-width: 1024px) {
  .lg\:flex { display: flex; }
  .lg\:hidden { display: none; }
  
  /* Améliorations desktop SANS CONFLITS CARTE */
  .btn:not([class*="leaflet"]):hover {
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  }
  
  .card:not([class*="leaflet"]):hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }
}

/* =================================================================
   ACCESSIBILITÉ & PERFORMANCE
   ================================================================= */

/* Focus visible */
:focus-visible {
  outline: 2px solid var(--primary);
  outline-offset: 2px;
}

/* Préférences utilisateur */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

@media (prefers-contrast: high) {
  :root {
    --border-light: #000000;
    --border-medium: #000000;
  }
}

/* GPU acceleration UNIQUEMENT pour éléments non-carte */
.btn:not([class*="leaflet"]):not([class*="marker"]),
.card:not([class*="leaflet"]):not([class*="marker"]),
.input:not([class*="leaflet"]):not([class*="marker"]) {
  will-change: transform;
}

/* Optimisation impression */
@media print {
  .no-print,
  .btn,
  .nav,
  .modal {
    display: none !important;
  }
  
  * {
    background: transparent !important;
    color: black !important;
    box-shadow: none !important;
  }
}

/* =================================================================
   ISOLATION SÉLECTIVE DE LEAFLET - CORRECTION DES CONFLITS
   ================================================================= */

/* Désactiver will-change UNIQUEMENT sur les éléments problématiques */
.leaflet-marker-icon,
.leaflet-marker-shadow,
.leaflet-popup-content-wrapper {
  will-change: auto !important;
}

/* Supprimer les transitions conflictuelles SANS masquer les éléments */
.leaflet-marker-icon {
  transition: none !important;
  animation: none !important;
}

.leaflet-marker-shadow {
  transition: none !important;
  animation: none !important;
}

/* Stabiliser les marqueurs personnalisés */
.modern-marker,
.stable-marker {
  transition: none !important;
}

.modern-marker:hover,
.stable-marker:hover {
  transition: none !important;
  transform: none !important;
}

/* Styles Leaflet de base - PRÉSERVÉS */
.leaflet-container {
  outline: none !important;
  font-family: var(--font-sans) !important;
}

.leaflet-popup-content-wrapper {
  border-radius: var(--radius-lg) !important;
  box-shadow: var(--shadow-lg) !important;
}

.leaflet-popup-close-button {
  color: var(--text-tertiary) !important;
  font-size: 18px !important;
  font-weight: bold !important;
}

/* =================================================================
   PROFILE CAROUSEL - SPÉCIFIQUE
   ================================================================= */

.profile-carousel {
  padding: var(--space-xl) 0;
}

.profile-carousel-container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 var(--space-md);
}

.profile-carousel-header {
  text-align: center;
  margin-bottom: var(--space-xl);
}

.profile-carousel-title {
  font-size: var(--font-3xl);
  font-weight: 700;
  color: var(--error);
  margin-bottom: var(--space-md);
}

.profile-carousel-subtitle {
  font-size: var(--font-lg);
  color: var(--error);
  max-width: 600px;
  margin: 0 auto;
}

.profile-cards-mobile {
  display: flex;
  gap: var(--space-md);
  overflow-x: auto;
  padding: 0 var(--space-md) var(--space-md);
  margin: 0 calc(var(--space-md) * -1);
  scroll-snap-type: x mandatory;
  scrollbar-width: none;
  -ms-overflow-style: none;
  -webkit-overflow-scrolling: touch;
}

.profile-cards-mobile::-webkit-scrollbar {
  display: none;
}

.profile-card {
  flex-shrink: 0;
  width: 280px;
  background-color: var(--surface);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-light);
  overflow: hidden;
  cursor: pointer;
  transition: all var(--duration-fast) var(--ease);
  scroll-snap-align: start;
}

.profile-card:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.profile-card-image {
  height: 200px;
  overflow: hidden;
  position: relative;
}

.profile-card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.profile-card-content {
  padding: var(--space-md);
}

.profile-card-name {
  font-size: var(--font-lg);
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--space-sm);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.profile-card-button {
  width: 100%;
  min-height: var(--touch-ideal);
  padding: var(--space-sm) var(--space-md);
  font-size: var(--font-base);
  font-weight: 600;
  color: white;
  background-color: var(--primary);
  border: none;
  border-radius: var(--radius);
  cursor: pointer;
  transition: all var(--duration-fast) var(--ease);
}

.profile-card-button:hover {
  background-color: var(--primary-hover);
}

@media (min-width: 768px) {
  .profile-cards-mobile {
    display: none;
  }
  
  .profile-cards-desktop {
    display: flex;
    gap: var(--space-lg);
  }
}

/* =================================================================
   FIN - CSS PROFESSIONNEL CORRIGÉ SANS CONFLITS CARTE
   ================================================================= */
